{
  "compilerOptions": {
    "lib": [
      "es2021",
      "dom"
    ],
    "target": "ESNext",
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "module": "ESNext",
    /* Bundler mode */
    // "moduleResolution": "bundler",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "@intlify/unplugin-vue-i18n/messages",
      "vite/client"
    ],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.json",
    "./env.d.ts",
    "./typed-router.d.ts",
    "./auto-imports.d.ts",
    "tsconfig.config.json",
    "vite.config.ts",
    "vite.config.d.ts",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}